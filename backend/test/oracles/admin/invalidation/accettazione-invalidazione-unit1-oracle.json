{
    "testCases": [
        {
            "id": "TC_RF21_1",
            "description": "L’ID del questionario non può essere vuoto",
            "input": {
                "idQuestionario": "",
                "emailAmministratore": "admin@test.com"
            },
            "mockData": {},
            "expectedBehavior": {
                "type": "exception",
                "message": "ID Questionario obbligatorio"
            }
        },
        {
            "id": "TC_RF21_2",
            "description": "L’Email dell’amministratore non può essere vuota",
            "input": {
                "idQuestionario": "valid-id",
                "emailAmministratore": ""
            },
            "mockData": {},
            "expectedBehavior": {
                "type": "exception",
                "message": "Email Amministratore obbligatoria"
            }
        },
        {
            "id": "TC_RF21_3",
            "description": "Questionario non trovato",
            "input": {
                "idQuestionario": "not-found-id",
                "emailAmministratore": "admin@test.com"
            },
            "mockData": {
                "questionarioExists": false
            },
            "expectedBehavior": {
                "type": "exception",
                "message": "Questionario non trovato"
            }
        },
        {
            "id": "TC_RF21_4",
            "description": "Amministratore non trovato",
            "input": {
                "idQuestionario": "valid-id",
                "emailAmministratore": "unknown@test.com"
            },
            "mockData": {
                "questionarioExists": true,
                "adminExists": false
            },
            "expectedBehavior": {
                "type": "exception",
                "message": "Amministratore non trovato"
            }
        },
        {
            "id": "TC_RF21_5",
            "description": "Non si può invalidare un questionario che è già stato invalidato",
            "input": {
                "idQuestionario": "valid-id",
                "emailAmministratore": "admin@test.com"
            },
            "mockData": {
                "questionarioExists": true,
                "adminExists": true,
                "invalidato": true
            },
            "expectedBehavior": {
                "type": "exception",
                "message": "già stato invalidato"
            }
        },
        {
            "id": "TC_RF21_6",
            "description": "Corretto: Tutti i campi rispettano le regole formali",
            "input": {
                "idQuestionario": "valid-id",
                "emailAmministratore": "admin@test.com"
            },
            "mockData": {
                "questionarioExists": true,
                "adminExists": true,
                "invalidato": false
            },
            "expectedBehavior": {
                "type": "success",
                "message": "OK"
            }
        }
    ]
}